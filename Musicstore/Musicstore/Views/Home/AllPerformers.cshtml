@model IEnumerable<Musicstore.Models.Performer>

@{
    ViewBag.Title = "Performers";
}
<div class="row">
    @foreach(var c in Model) {
        <div class="col-sm-2 col-md-2">
            <div class="category">
                <a href="@Url.Action("FindPerformer", "Search", new { performer = c.Name})">
                    <span></span>
                    <span class="text text-small">@c.Name</span>
                    <img class="img-responsive" src="@c.Thumbnail" />
                </a>
            </div>
            <br />
        </div>
    }
</div>