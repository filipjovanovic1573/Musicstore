@model Musicstore.Models.User

@{
    ViewBag.Title = "Delete user";
}

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.UserName)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-sm btn-danger" /> &nbsp;
            @Html.ActionLink("Back to List", "ListUsers", null, new { @class = "btn-sm btn-primary" })
        </div>
    }
</div>
