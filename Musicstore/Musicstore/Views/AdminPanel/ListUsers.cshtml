@model IEnumerable<Musicstore.Models.User>
@using Musicstore.Models
@{
    ViewBag.Title = "List of users";
}

<table class="table" id="dtable">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Locked until
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                </td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = item.Id })" class="btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                    <a href="@Url.Action("UserDetails", new { id = item.Id })" class="btn-sm btn-info"><i class="glyphicon glyphicon-list"></i> Details</a>
                    <a href="@Url.Action("DeleteUser", new { id = item.Id })" class="btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#dtable').DataTable();
    });
</script>

@section scripts{
    <link href="~/content/datatables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/datatables/jquery.datatables.min.js"></script>
    <script src="~/scripts/datatables/datatables.bootstrap.min.js"></script>
    <script src="~/scripts/datatables/datatables.responsive.min.js"></script>
}